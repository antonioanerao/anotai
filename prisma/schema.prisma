generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum EditMode {
  OWNER_ONLY
  COLLABORATIVE
  ANONYMOUS
}

enum CodeLanguage {
  PLAIN_TEXT
  PYTHON
  PHP
  JAVASCRIPT
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String    @unique
  emailVerified  DateTime?
  passwordHash   String?
  role           UserRole  @default(USER)
  accounts       Account[]
  sessions       Session[]
  pads           Pad[]
  settingsEdits  PlatformSettings[] @relation("settingsUpdatedBy")
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Pad {
  id        String   @id @default(cuid())
  slug      String   @unique
  content   String   @default("")
  editMode  EditMode @default(OWNER_ONLY)
  language  CodeLanguage @default(PLAIN_TEXT)
  ownerId   String?
  owner     User?    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PlatformSettings {
  id                Int      @id @default(1)
  allowPublicSignup Boolean  @default(true)
  allowedSignupDomains String @default("")
  requireAuthToCreatePad Boolean @default(true)
  updatedById       String?
  updatedBy         User?    @relation("settingsUpdatedBy", fields: [updatedById], references: [id], onDelete: SetNull)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
