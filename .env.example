POSTGRES_DB="anotai"
POSTGRES_USER="anotai_user"
POSTGRES_PASSWORD="change-me"
DB_HOST="db"
DB_SCHEMA="public"
DB_PORT="5432"
APP_PORT="3000"
DB_CONTAINER_NAME="anotai_db"
APP_CONTAINER_NAME="anotai_app"

# Local (npm run dev): banco acessado via porta publicada no host.
DATABASE_URL="postgresql://anotai_user:change-me@localhost:5432/anotai?schema=public"
# Opcional: sobrescreve a URL usada no servico app do docker-compose.
# DOCKER_DATABASE_URL="postgresql://anotai_user:change-me@db:5432/anotai?schema=public"
AUTH_SECRET="replace-with-a-long-random-secret"
PRIMARY_ADMIN_EMAIL="admin@example.com"
# Em producao, use o dominio final HTTPS, por exemplo:
# NEXTAUTH_URL="https://anotai.anerao.dev"
NEXTAUTH_URL="http://localhost:3000"

# Google reCAPTCHA v3
# Em producao, captcha so e usado se as duas chaves abaixo estiverem preenchidas.
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=""
RECAPTCHA_SECRET_KEY=""
RECAPTCHA_MIN_SCORE="0.5"
